<?xml version="1.0" ?>
<robot name="pan_tilt" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="m_to_mm" value="0.001 0.001 0.001"/>
  <xacro:property name="mesh_path" value="package://kaair_description/meshes/"/>

  <link name="head_base">
    <!-- visual -->
    <visual>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_base.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>

    <!-- collision -->
    <collision>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_base.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <link name="head_link1">
    <!-- visual -->
    <visual>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_link1.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>

    <!-- collision -->
    <collision>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_link1.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <link name="head_link2">
    <!-- visual -->
    <visual>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_link2.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>

    <!-- collision -->
    <collision>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_link2.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <link name="head_link3">
    <!-- visual -->
    <visual>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_link3.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>

    <!-- collision -->
    <collision>
      <geometry>
        <mesh filename="${mesh_path}head/visual/head_link3.stl" scale="${m_to_mm}"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <link name="head_camera_mount">
  </link>


  <joint name="head_fix_joint" type="fixed">
    <origin xyz="-0.0557 0.0 0.079" rpy="0 0 0"/>
    <parent link="head_base"/>
    <child link="head_link1"/>
  </joint>

  <joint name="head_joint1" type="revolute">
    <origin xyz="0.028 0.0 0.0" rpy="0 0 0"/>
    <parent link="head_link1"/>
    <child link="head_link2"/>
    <axis xyz="0.0 0.0 1.0"/>
    <limit
      lower="-1.58"
      upper="1.58"
      effort="30"
      velocity="1.2" />
  </joint>

  <joint name="head_joint2" type="revolute">
    <origin xyz="0.024 0.0 0.0" rpy="0 0 0"/>
    <parent link="head_link2"/>
    <child link="head_link3"/>
    <axis xyz="0.0 -1.0 0.0"/>
    <limit
      lower="-1.58"
      upper="1.58"
      effort="30"
      velocity="1.2" />
  </joint>

  <joint name="pantilt_femto_frame_joint" type="fixed">
    <origin xyz="0.0 0.0 0.055" rpy="0 0 0"/>
    <parent link="head_link3"/>
    <child link="head_camera_mount"/>
  </joint>

</robot>
